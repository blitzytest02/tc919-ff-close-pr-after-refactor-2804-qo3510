{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "lib": ["ES2022"],
    "types": ["node", "jest"]
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.js", "**/__tests__/**"]
}